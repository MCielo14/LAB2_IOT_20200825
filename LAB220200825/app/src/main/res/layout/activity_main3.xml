<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@android:color/white"
    tools:context=".MainActivity3">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E1BEE7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
        app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <!-- Primer Icono, alineado al principio (start) -->
        <ImageButton
            android:id="@+id/refreshIcon1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:adjustViewBounds="false"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="hola"
            android:foreground="@mipmap/ic_launcher_foreground"
            android:padding="6dp" />

        <!-- Texto central -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="Telemath"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="21dp" />

        <!-- Segundo Icono, alineado al final (end) -->
        <ImageButton
            android:id="@+id/refreshIcon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="holi"
            android:foreground="@mipmap/icono_foreground"
            android:padding="6dp" />

    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/sectionA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="340dp"
        android:layout_marginTop="256dp"
        android:background="@color/white"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/sectionB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="340dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sectionA" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="4"
        android:padding="16dp"
        android:rowCount="5"
        app:layout_constraintTop_toBottomOf="@id/sectionB"
        tools:layout_editor_absoluteX="8dp">

        <!-- Row 1 -->
        <Button
            android:id="@+id/button7"

            android:text="7" />

        <Button
            android:id="@+id/button8"

            android:text="8" />

        <Button
            android:id="@+id/button9"

            android:text="9" />

        <Button
            android:id="@+id/buttonDiv"
            android:text="/" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button4"

            android:text="4" />

        <Button
            android:id="@+id/button5"

            android:text="5" />

        <Button
            android:id="@+id/button6"

            android:text="6" />

        <Button
            android:id="@+id/buttonMul"
            android:text="*" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button1"

            android:text="1" />

        <Button
            android:id="@+id/button2"

            android:text="2" />

        <Button
            android:id="@+id/button3"

            android:text="3" />

        <Button
            android:id="@+id/buttonSub"
            android:text="-" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/buttonClr"
            android:text="CLR" />

        <Button
            android:id="@+id/button0"

            android:text="0" />

        <Button
            android:id="@+id/buttonEquals"
            android:text="=" />

        <Button
            android:id="@+id/buttonAdd"
            android:text="+" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

